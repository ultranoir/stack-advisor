{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "app.vue",
    "components/**/*.vue",
    "composables/**/*.ts",
    "layouts/**/*.vue",
    "middleware/**/*.ts",
    "pages/**/*.vue",
    "plugins/**/*.ts",
    "stores/**/*.ts",
    "types/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
